@model IEnumerable<HIMS_Web.Models.Products>

@{
    ViewData["Title"] = "产品清单";
}

<h1>@ViewData["Title"]</h1>

<h4 style="font:bold 14px;" class="p-1 bg-secondary">
    <a  asp-action="Create">新 增</a>
</h4>

<table style="width:80%;margin:0 auto;" class="table table-dark">
    <thead class="thead-dark">
        <tr>
            <th style="text-align:center" scope="col">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th style="text-align:center" scope="col">
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th style="text-align:center" scope="col">
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th style="text-align:center" scope="col">
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th style="text-align:center" scope="col">【操作】</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">编辑</a> |
                <a asp-action="Details" asp-route-id="@item.ID">详情</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">删除</a>
            </td>
        </tr>
}
    </tbody>
</table>
