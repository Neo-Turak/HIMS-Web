@model IEnumerable<HIMS_Web.Models.Locations>

@{
    ViewData["Title"] = "仓库清单";
}



<h1>@ViewData["Title"]</h1>

<h2>dangqian</h2>

<h4 style="font:bold 14px;" class="p-1 bg-secondary">
    <a asp-action="Create">新 增</a>
</h4>
<table style="width:80%;margin:0 auto;text-align:center;align-content:center" class="table table-dark">
    <thead class="thead-dark">
        <tr>
            <th style="text-align:center" scope="col">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th style="text-align:center;" scope="col">
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            <th style="text-align:center" scope="col">
                @Html.DisplayNameFor(model => model.Owner)
            </th>
            <th style="text-align:center" scope="col">
                【操作】
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Capacity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Owner)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">编辑</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">详情</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">删除</a>
                </td>
            </tr>
        }
    </tbody>
</table>
